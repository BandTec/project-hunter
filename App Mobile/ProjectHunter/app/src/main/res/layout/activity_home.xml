<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#2B2828" />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:background="@drawable/ic_action_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteY="30dp"

        />

    <TextView
        android:layout_width="250dp"
        android:id="@+id/tv_titulo"
        android:layout_marginTop="50dp"
        android:text="Suas PrÃ³ximas Partidas:"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        android:layout_height="70dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_partidas"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo" />


    <ImageButton
        android:id="@+id/bt_perfil"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botoes_estilizados"

        android:text=""
        android:src="@drawable/users"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:textSize="13dp"
        android:layout_marginRight="270dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_partidas" />

    <ImageButton
        android:id="@+id/bt_equipe"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botoes_estilizados"

        android:text=""
        android:src="@drawable/shield"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:textSize="13dp"
        android:layout_marginRight="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_partidas" />

    <ImageButton
        android:id="@+id/bt_config"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botoes_estilizados"

        android:text=""
        android:src="@drawable/settings"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:textSize="13dp"
        android:layout_marginLeft="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_partidas" />

    <ImageButton
        android:id="@+id/bt_sair"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/botoes_estilizados"
        android:onClick="logoff"
        android:text=""
        android:src="@drawable/logout"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:textSize="13dp"
        android:layout_marginLeft="270dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_partidas"
        tools:ignore="OnClick" />


</androidx.constraintlayout.widget.ConstraintLayout>